{
    "name": "luckydraw-server",
    "version": "1.0.0",
    "description": "server for luckydraw",
    "main": "index.js",
    "author": "Dylan Tsou",
    "license": "ISC",
    "scripts": {
        "heroku-postbuild": "sequelize db:migrate",
        "start": "node server.js",
        "dev": "nodemon server.js",
        "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
        "prepare": "husky install"
    },
    "engines": {
        "node": "16.x"
    },
    "dependencies": {
        "body-parser": "^1.20.1",
        "express": "^4.18.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^2.3.3",
        "pg": "^8.8.0",
        "read-excel-file": "^5.5.3",
        "sequelize": "^6.25.2",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^8.0.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "sequelize-cli": "^6.5.1"
    },
    "lint-staged": {
        "src/**/*.{js,ts,json}": [
            "prettier --write"
        ],
        "src/**/*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
